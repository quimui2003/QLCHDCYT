@using CuaHangDungCuYTe.Models;
@model Account

@{
    ViewBag.Title = "Settings";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="setting">
    <div class="setting-box">
        <div class="setting-content-box">
            <p>Setting</p>
            <form action="@Url.Action("EditSettings", "Admin")" method="post" enctype="multipart/form-data" id="ad-info">
                <label for="adm-name">Name:</label>
                <input type="text" name="name" placeholder="Name" id="adm-name" value="@Model.Fullname" required>
                <label for="adm-email">Email:</label>
                <input type="email" name="email" placeholder="Email" id="adm-email" value="@Model.Email" disabled>
                <label for="adm-pass">Password:</label>
                <input type="password" name="password" placeholder="Password" id="adm-pass" value="@Model.Password" required>
                <label for="adm-address">Address:</label>
                <input type="text" name="address" placeholder="Address" id="adm-address" value="@Model.Address">
                <label for="adm-sdt">Phone number:</label>
                <input type="text" name="sdt" placeholder="Phone number" id="adm-sdt" value="@Model.Sdt">

                <div class="setting-info">
                    <div class="setting-info-img">
                        <img src="~/Images/@Model.Avatar" alt="avatar" />
                    </div>
                    <input type="hidden" name="ImageOld" id="img-old">
                    <input type="file" name="fileUpload" class="upfile"/>
                </div>

                <input type="submit" name="dmk" class="dmk" value="Save">
            </form>
        </div>
    </div>
</div>
